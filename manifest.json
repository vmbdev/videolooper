{
  "name": "Video Looper",
  "description": "Control whether the videos of a website automatically loop or not",
  "version": "0.1",
  "manifest_version": 3,
  "icons": {
    "512": "assets/logo.png"
  },
  "action": {
    "default_title": "Video Looper",
    "default_popup": "src/settings-popup.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts" : [{
    "js" : ["src/main.js"],
    "matches": ["<all_urls>"]
  }]
}
